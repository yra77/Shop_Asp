@model Shop_Asp.Domain.Entities.Brand

@{
    ViewData["Title"] = "BrandCreate";
}


<div class="row">

    <h4 class="text-center">BrandCreate</h4>

    <div class="col-md-4">

        <form asp-action="BrandCreate"
              asp-area="Admin"
              asp-controller="Brands"
              method="post"
              enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NameBrand" class="control-label"></label>
                <input asp-for="NameBrand" class="form-control" />
                <span asp-validation-for="NameBrand" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="LogoBrands" class="control-label">Logotype</label>
                <input type="file" name="BrandImgPath" asp-for="LogoBrands" class="form-control" />
            </div>

            <div class="form-group mt-5">
                <input type="submit" 
                    value="Create" 
                    class="btn btn-info"
                       asp-action="BrandCreate"
                       asp-area="Admin"
                       asp-controller="Brands" />
            </div>

        </form>

    </div>
</div>

<div class="mt-5 text-center fw-bold">
    <a asp-area="Admin"
       asp-controller="Home"
       asp-action="Index">
        Back to List
    </a>
</div>

